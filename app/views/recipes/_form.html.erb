<%= hidden_field_tag 'tag_list', @tags, id: 'tag_list' %>


<%= form_for(@recipe, html: {class: "form-horizontal center"}) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name:", class: "col-sm-2 control-label"%>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description:", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ingredients, "Ingredients:", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_area :ingredients %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :servings, "Servings:", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.number_field :servings %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.label :vegan, "Vegan?", class: "checkbox" %>
      <%= f.check_box :vegan %>
    </div>
  </div>

  <div class="form-group" >
    <%= f.label :directions, "Directions:", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_area :directions %>
    </div>
  </div>

  <div class = "form-group" >
    <%= f.label :tags, "Tags:", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :tag_list %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
<% end %>

