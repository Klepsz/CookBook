<%= hidden_field_tag 'tag_list', @tags, id: 'tag_list' %>

<%= simple_form_for(@recipe, html: {multipart: true}) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :servings, label: "Servings:" %>
  <%= f.input :vegan, label: "Vegan?" %>
  <%= f.input :directions %>
  <%= f.input :tag_list, placeholder: "       " %>
  <%= f.input :picture %>
  <%= f.button :submit %>
<% end %>
