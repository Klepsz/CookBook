<div class = "container">
  <h1>CookBook Rules</h1>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <div class = "navbar-brand"><%= link_to "Home", recipes_path %></div>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class = "active"> <%= link_to "New Recipe", new_recipe_path %> </li>
        </ul>
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Send</button>
        </form>
      </div>
    </div>
  </nav>


  <div class = "row">
    <div class = "col-sm-8">
      <ul class = "list-unstyled recipe-list">
        <% @recipe.each do |recipe| %>
          <li class = "recipe">
            <div class = "col-sm-3">
              Picture
            </div>
            <div class = "col-sm-9">
              <h4><%= link_to recipe.name, recipe %></h4>
              <div>
                <p><%= recipe.description %></p>
              </div>
              <p class="text-muted">Posted by ... </p>
              <div>
                <% recipe.tags.each do |tag| %>
                  <%= link_to tag.name, tag_path(tag), class: 'label label-primary' %>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class = "col-sm-4">
      <h2>Tags:</h2>
      <ul class = "list-unstyled">
        <% @tags.all.each do |tag| %>
          <li>
            <%= link_to tag.name, tag_path(tag), class: 'label label-primary'  %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

