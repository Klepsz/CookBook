<h1> Ingredients: </h1>


<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
         <th>Name</th>
         <th>Edit</th>
         <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @ingredient.each do |ingredient| %>
       <tr>
        <td><%= ingredient.name %></td>
        <td><%= link_to "Edit", edit_ingredient_path(ingredient) %></td>
        <td><%= link_to "Delete", ingredient, method: :delete %></td>
       </tr>
      <% end %>
      </tbody>
  </table>
</div>

<%= link_to "Go Home", root_path, class: "btn btn-default" %>
<%= link_to "Need more?", new_ingredient_path, class: "btn btn-default" %>
